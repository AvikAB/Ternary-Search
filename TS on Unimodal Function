#include<bits/stdc++.h>
using namespace std;

#define ll long long int
#define nl "\n"
#define FASTER ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
const ll N = 1e6+1234;
const ll mod = 1e9+7;

double func(double x){
    return 2*x*x - 12*x +7;
}

double ternarySearch(double l, double r){
    double eps = 1e-6;  // error limit
    while(r-l>eps){
        double m1 = l+(r-l)/3;
        double m2 = r-(r-l)/3;

        double fm1 = func(m1);  // function of m1 f(m1)
        double fm2 = func(m2);  // function of m2 f(m2)
        if(fm1>fm2){
            l = m1;
        } else if(fm1<fm2){
            r = m2;
        } else {
            l = m1;
            r = m2;
        }
    }
    return func(l);  // here we can use func(r), because at the last l and r are almost equal
}

int main(){
    double l,r;
    cin>>l>>r;
    double ans = ternarySearch(l,r);
    cout<<fixed<<setprecision(6);
    cout<<ans<<nl;
}
